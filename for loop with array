#include <iostream>
#include <cmath>
#include <string>
using namespace std;


void  readArray(int arr[100], int& l) {
	cout << "enter l of array" << endl;
	cin >> l;
	for (int i = 0; i < l; i++)
	{
		cout << "please enter element" << i+1 << endl;
		cin >> arr[i];

	}
}
void print(int arr[100],int l) {
	for (int i = 0; i < l; i++) {
		cout << "number of element" << i+1 << "=" << arr[i] << endl;
	}
}
int calculats(int arr[100], int l) {
	int sum = 0;
	for (int i = 0; i < l; i++) {
		sum = sum + arr[i];

	}
	return sum;

}
float claculatav(int arr[100], int l) {
	float sum=0;
	for (int i = 0; i < l; ++i) {
		sum = sum + arr[i];

	}
	return sum / l;
}

int main()
{
	int arr[100], l;
	readArray(arr, l);
	print(arr, l);
	cout << "sum of arr is" << calculats(arr, l) << endl;
	cout << "avareg of arr is" << claculatav(arr, l) << endl;

}
